<div class="container">
  <div class="row">
  <h2>新規会員登録</h2>
  </div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>


    <div class="form-group row" >
      <%= f.label :"(ニックネーム)", class: "col-md-4 " %>
      <%= f.text_field :nickname, placeholder: "", class: "col-md-2 form-control" %>
    </div>

    <div class="form-group row">
      <%= f.label :"メールアドレス", class: "col-md-4" %>
      <%= f.email_field :email, placeholder: "", class: "col-md-4 form-control"  %>
    </div>

    <div class="form-group row">
      <%= f.label :"パスワード（６文字以上）", class: "col-md-4" %>
      <%= f.password_field :password, class: "col-md-4 form-control" %>
    </div>

    <div class="form-group row">
      <%= f.label :"パスワード（確認用）", class: "col-md-4" %>
      <%= f.password_field :password_confirmation, class: "col-md-4 form-control" %>
    </div>

    <div class="form-group row">
      <%= f.submit "新規登録", class: "btn btn-success col-md-3 offset-1" %>
    </div>
  <% end %>

  　<div class="container">
     <div class="row">
  　   既に登録済みの方は
  　<br>
  　   <%= link_to "こちら", "/customers/sign_in" %>からログインして下さい
  　   </div>
      </div>

</div>
</div>


</div>