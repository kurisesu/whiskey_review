<!DOCTYPE html>
<html>
  <head>
    <title>ISO_whiskey_review</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class= "main-container">
    <header>
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <li class="navbar"><%= link_to "ISO_whiskey_review", root_path, class: "btn btn-primary" %></li>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown"></div>
            <% if customer_signed_in? %>
              <p class="nav_welcome">ようこそ<%= current_customer.nickname %>さん！</p>
            <% end %>
            <ul class="navbar-nav ml-auto">
              <% if customer_signed_in? %>
                <li class="navbar-link"><%= link_to "マイページ", customers_my_page_path, class: "btn btn-primary" %></li>
                <li class="navbar-link"><%= link_to "レビュー一覧", reviews_path, class: "btn btn-primary" %></li>
                <li class="navbar-link"><%= link_to "About", about_path, class: "btn btn-primary" %></li>
                <li class="navbar-link"><%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "btn btn-primary" %></li>
                </div>
              <% elsif admin_signed_in? %>
                <li class="navbar-link"><%= link_to "レビュー一覧",  admin_reviews_path, class: "btn btn-primary" %></li>
                <li class="navbar-link"><%= link_to "レビュー登録",  new_admin_review_path, class: "btn btn-primary" %></li>
                <li class="navbar-link"><%= link_to "ジャンル一覧",  admin_genres_path, class: "btn btn-primary" %></li>
                <li class="navbar-link"><%= link_to "会員一覧",  admin_root_path, class: "btn btn-primary" %></li>
                <li class="navbar-link"><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-primary" %></li>
              <% else %>
                <li class="navbar-link"><%= link_to "About", about_path, class: "btn btn-primary" %></li>
                <li class="navbar-link"><%= link_to "レビュー一覧", reviews_path, class: "btn btn-primary" %></li>
                <li class="navbar-link"><%= link_to "新規登録", new_customer_registration_path, class: "btn btn-primary" %></li>
                <li class="navbar-link"><%= link_to "ログイン", new_customer_session_path, class: "btn btn-primary" %></li>
              <% end %>
            </ul>
          </nav>


   <main>

      <% if flash[:notice] %>
        <p class="alert alert-success">
          <%= flash[:notice] %>
        </p>
      <% end %>
      <% if flash[:alert] %>
        <p class="alert alert-danger">
          <%= flash[:alert] %>
        </p>
      <% end %>
  <%= yield %>
   </main>



    </div>
   </div>
  </div>
 </body>
</html>