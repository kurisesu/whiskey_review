<div class="container">
 <div class="row">
  <div class="col m-3">
    <h2 class="text-black">ジャンル一覧・登録</h2><br>
       <%= form_with model: @genre, url: admin_genres_path, method: :post, local:true do |f| %>
       <table class="table table-borderless table-dark" style="opacity: 0.8;">

       <tr></tr>
       <th><%= f.label :ジャンル名 %></th>
       <td><%= f.text_field :genre_name  %></th>
       <td class="text-right"><%= f.submit "ジャンルを新規登録",class:"btn btn-primary text-white" %></td>
       <% end %>

       </table>


    <table class="table table-borderless table-dark" style="opacity: 0.8;">

      <thead>
        <tr>
          <th scope="col">ジャンルID</th>
          <th scope="col">ジャンル名</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <th scope="low"><%= genre.id %></th>
          <th scope="low"><%= link_to genre.genre_name, admin_genre_path(genre), class:"text-white" %></th>
      　　　<th scope="low"><%= link_to "編集する", edit_admin_genre_path(genre), class:'btn btn-success' %></th>
    	    <th></th>
        </tr>
        <% end %>
      </tbody>

    </table>

  </div>
 </div>
</div>