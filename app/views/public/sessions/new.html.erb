<div class="container">
  <div class="row">
  <h2 class= "text-light">ログイン</h2>
  </div>

  <h4 class= "text-light">会員の方はこちらからログイン</h4>
  <%= form_with model: @customer, url: customer_session_path, local:true do |f| %>

    <div class="form-group row">
      <%= f.label :"メールアドレス", class: "col-md-3 text-light" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-md-5 form-control" %>
    </div>

    <div class="form-group row">
      <%= f.label :"パスワード", class: "col-md-3 text-light" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "col-md-5 form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field text-light">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in",class: "btn btn-sm btn-primary" %>
    </div>
  <% end %>
<br>
  <h4 class= "text-light">会員登録がお済みでない方は</h4>
  <%=link_to "こちら",new_customer_registration_path %>
  <div class= "text-light">から新規登録を行ってください</div>